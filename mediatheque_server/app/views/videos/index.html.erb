<% if @videos.empty? %>
	<h3>Your videoth√®que is empty, you have to choices to begin:</h3>
	<ul>
	  <li>Creating video manually,</li>
	  <li>Choose a video file or a directory from your machine.</li>
	</ul>
	<p>Each option is on the menu on right side.</p>
<% else %>
	<% @videos.each_with_index do |video, index| %>
		<div class="video_item">
			<%= link_to image_tag(video.cover_list, class: 'cover'), video_path(id: video) %>
			<div class="info_video">
				<p style="margin-bottom: 3px" title="<%= video.title %>"><%= truncate(video.title, length: 20) %></p>
				<div class="options">
					<%= link_to image_tag('icons/edit.png'), edit_video_path(id: video), alt: t("videos.index.edit") %>
					<%= link_to image_tag('icons/remove.gif'), video_path(id: video), method: :delete, title: t("videos.index.remove"), confirm: t("videos.index.want_to_remove") %>
				</div>
			</div>
		</div>
		
	<% end %>
<% end %>